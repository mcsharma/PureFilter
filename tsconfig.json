{
  "compilerOptions": {
    "module": "ESNext", // Keeps imports as ES Modules
    "target": "ES6",    
    "outDir": "./dist/",
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react"
  }
}
